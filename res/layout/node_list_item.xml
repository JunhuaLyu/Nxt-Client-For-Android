<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
    android:gravity="center"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
    
	<ImageView android:id="@+id/img"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:padding="14dp"
        android:src="@drawable/flag_red"
		/>
    
	<LinearLayout android:orientation="vertical"
		android:layout_width="0dp"
        android:layout_weight="1"
		android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
		android:layout_margin="4dip">

        <TextView android:id="@+id/textview_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="127.0.0.1"
            android:textColor="#66f"
            android:textSize="20dip"
            android:textStyle="bold"
            />

        <LinearLayout android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/textview_blocks"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Blocks:32001"
                android:textColor="#888"
                android:textSize="16dip"
                />

            <TextView android:id="@+id/textview_version"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="NRS(0.4.8)"
                android:textColor="#888"
                android:textSize="16dip"
                />

        </LinearLayout>

	</LinearLayout>

</LinearLayout>

